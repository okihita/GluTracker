<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/glutracker_medium_padding">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TableRow>

                <TextView
                    style="?android:textAppearanceMedium"
                    android:layout_column="1"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="Name"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profile_TextView_name"
                    style="?android:textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_column="2"
                    android:text=":" />
            </TableRow>

            <TableRow>

                <TextView
                    style="?android:textAppearanceMedium"
                    android:layout_column="1"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="Birthdate"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profile_TextView_birthdate"
                    style="?android:textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_column="2"
                    android:text=":" />
            </TableRow>

            <TableRow>

                <TextView
                    style="?android:textAppearanceMedium"
                    android:layout_column="1"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="Age"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profile_TextView_age"
                    style="?android:textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_column="2"
                    android:text=":" />
            </TableRow>

            <TableRow>

                <TextView
                    style="?android:textAppearanceMedium"
                    android:layout_column="1"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="Gender"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profile_TextView_gender"
                    style="?android:textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_column="2"
                    android:text=":" />
            </TableRow>

            <TableRow>

                <TextView
                    style="?android:textAppearanceMedium"
                    android:layout_column="1"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="History"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profile_TextView_history"
                    style="?android:textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_column="2"
                    android:text=":" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_column="1"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_column="2" />
            </TableRow>

            <TableRow>

                <TextView
                    style="?android:textAppearanceMedium"
                    android:layout_column="1"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="Email"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profile_TextView_email"
                    style="?android:textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_column="2"
                    android:text=":" />
            </TableRow>

            <TableRow>

                <TextView
                    style="?android:textAppearanceMedium"
                    android:layout_column="1"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="Password"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profile_TextView_password"
                    style="?android:textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_column="2"
                    android:text=":" />

                <TextView
                    style="?android:textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_column="2"
                    android:textColor="@color/material_blue_grey_800" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/ProfFrag_Button_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDIT" />

    </LinearLayout>


    <ProgressBar
        android:id="@+id/profile_ProgressBar_fullscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />


</RelativeLayout>